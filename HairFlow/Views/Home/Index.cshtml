@using HairFlow.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager;
@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4">Welcome to Hair Flow Courses</h1>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Not logged in</h1>
    </div>
}


<div class="modal fade" id="UserLoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <partial name="_UserLoginPartial"></partial>
</div>

<div class="modal fade" id="UserRegistrationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <partial name="_UserRegistrationPartial"></partial>
</div>
@section Scripts{

    <script src="~/js/UserRegistration.js"></script>
    <script src="~/js/UserLogin.js"></script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}